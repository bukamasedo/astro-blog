---
import Navigation from './Navigation.astro'
---

<header>
  <div>
    <h2>Shu Hirouchi</h2>
    <nav>
      <Navigation color="#2b2c34" />
    </nav>
  </div>
  <span></span>
</header>

<style>
  header {
    max-width: 48rem;
    padding: 0 1rem;
    padding-top: 1rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h2 {
    color: var(--gray);
  }

  span {
    width: 100%;
    border-top: 1px solid var(--shadow);
    box-shadow: 1px 1px 1px var(--white);
  }
</style>
